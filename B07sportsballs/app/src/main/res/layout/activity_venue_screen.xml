<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".VenueScreen">

    <TextView
        android:id="@+id/venuescreentitle"
        android:layout_width="373dp"
        android:layout_height="0dp"
        android:layout_marginTop="16dp"
        android:text="VenueScreen - Please Select a Venue"
        android:textSize="25sp"
        app:layout_constraintStart_toStartOf="@+id/listofvenues"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/VenueScreenQuit"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="24dp"
        android:layout_marginBottom="16dp"
        android:text="Quit"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <ListView
        android:id="@+id/listofvenues"
        android:layout_width="372dp"
        android:layout_height="440dp"
        android:layout_marginTop="1dp"
        android:layout_marginBottom="1dp"
        app:layout_constraintBottom_toTopOf="@+id/VenueScreenQuit"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/venuescreentitle" />

</androidx.constraintlayout.widget.ConstraintLayout>